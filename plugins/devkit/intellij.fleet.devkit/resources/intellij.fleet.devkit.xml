<idea-plugin package="org.jetbrains.idea.devkit.fleet">
  <dependencies>
    <module name="intellij.devkit.core"/>
    <plugin id="org.jetbrains.kotlin"/>
  </dependencies>

  <resource-bundle>messages.DevKitFleetBundle</resource-bundle>

  <extensions defaultExtensionNs="com.intellij">
    <localInspection language="kotlin" id="SettingRegistrationDocumentationInspection"
                     groupBundle="messages.DevKitBundle"
                     groupPathKey="inspections.group.path" groupKey="inspections.group.code"
                     enabledByDefault="true" level="WARNING"
                     implementationClass="org.jetbrains.idea.devkit.fleet.inspections.DocumentationNotFoundInspection"
                     key="inspections.plugin.fleet.setting.is.documented"/>
    <codeInsight.lineMarkerProvider
      language="kotlin"
      implementationClass="org.jetbrains.idea.devkit.fleet.navigation.NavigateToDocumentationLineMarkerProvider"/>
    <codeInsight.lineMarkerProvider
      language="kotlin"
      implementationClass="org.jetbrains.idea.devkit.fleet.navigation.NavigateToRegistrationLineMarkerProvider"/>
  </extensions>
</idea-plugin>